CREATE TABLE ICU_data (
     hospital_death INT NOT NULL,
	 d1_heartrate_min INT NOT NULL,
     d1_heartrate_max INT NOT NULL,
	 d1_sysbp_min INT NOT NULL,
	 d1_sysbp_max INT NOT NULL, 
	 d1_diasbp_max INT NOT NULL, 
	 d1_diasbp_min INT NOT NULL, 
	 bmi VARCHAR NOT NULL,
	 weight VARCHAR NOT NULL,
	 age INT NOT NULL,
	 d1_glucose_min INT NOT NULL,
	 d1_glucose_max INT NOT NULL,
	 patient_id INT NOT NULL,
	 PRIMARY KEY (patient_id)
);

-- making demographic table 
SELECT patient_id, gender, age, weight, hospital_death
INTO patient_demographics 
FROM icu_data

-- making bp table
SELECT patient_id, d1_sysbp_min, d1_sysbp_max, d1_diasbp_max, d1_diasbp_min
INTO  blood_pressure_heart_rate
FROM icu_data

-- Joining blood sugar and bloodpressure tables into new table
SELECT blood_pressure_data.patient_id,
	 blood_pressure_data.d1_diasbp_max,
	 blood_pressure_data.d1_diasbp_min,
	 blood_pressure_data.d1_sysbp_max,
	 blood_pressure_data.d1_sysbp_min,
     icu_data.d1_glucose_min,
     icu_data.d1_glucose_max
INTO blood_sugar_blood_pressure
FROM blood_pressure_data
INNER JOIN icu_data
ON blood_pressure_data.patient_id = icu_data.patient_id;